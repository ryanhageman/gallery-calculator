div { class="o-layout"
      data-controller="category-button"
      data-category-button-category="original"
      data-category-button-artwork-medium="" }
  = image_tag 'gallery-logo.png', class: 'c-logo'

  .c-navigation
    = link_to 'Calculator', '/', class: 'c-button'
    = link_to 'Tables', '/tables.html', class: 'c-button is-active'

  h1.o-layout__heading Prices for <br> Standard Sizes


  .c-category-button__group
    .c-category-button
      input { type="radio"
              name="category"
              value="original"
              id="original"
              class="c-category-button__input"
              checked=true
              data-target="category-button.categoryButton"
              data-action="category-button#categorySelect" }
      label { class="c-button c-button--large c-category-button__label" for="original" } Original

    .c-category-button
      input { type="radio"
              name="category"
              value="print"
              id="print"
              class="c-category-button__input"
              data-target="category-button.categoryButton"
              data-action="category-button#categorySelect" }
      label { class="c-button c-button--large c-category-button__label" for="print" } Print

  div { class="c-category-button__dropdown c-category-button__dropdown--horizontal"
        data-target="category-button.originalsDropdown" }
    .c-category-button
      input { type="radio"
              name="artwork-medium"
              value="original--paper"
              id="original--paper"
              class="c-category-button__input"
              data-target="category-button.artworkMediumButton"
              data-action="category-button#artworkMediumSelect" }
      label { class="c-button c-category-button__label c-category-button__label--dropdown" for="original--paper" } Paper

    .c-category-button
