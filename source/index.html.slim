.o-layout
  = image_tag 'gallery-logo.png', class: 'c-logo'

  .c-navigation
    = link_to 'Calculator',
              '/index.html',
              class: 'c-button is-active',
              data: { controller: "navigation",
                      action: 'navigation#root' }

    = link_to 'Tables',
              '/tables.html',
              class: 'c-button',
              data: { controller: "navigation",
                      action: 'navigation#tables' }

  section { class="c-calculator"
            data-testid='calculator'
            data-controller="calculator"
            data-calculator-category="original"
            data-calculator-artwork-medium=""
            data-calculator-size-message="Ready..."
            data-calculator-chosen-medium-message="(◕‿◕)"
            data-calculator-price-constant=""
            data-calculator-print-paper=(data.prices.printPaper)
            data-calculator-print-canvas=(data.prices.printCanvas)
            data-calculator-original-js=(data.prices.originalJacksonSquare)
            data-calculator-original-canvas=(data.prices.originalCanvas)
            data-calculator-original-paper=(data.prices.originalPaper) }
    == partial 'answer_card'
    == partial 'calculator_form'